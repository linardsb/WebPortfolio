<div class="container">
  <h1 class="tech-news-headline">#AI on Twitter</h1>

  <% if @error_message %>
    <div class="alert alert-warning" role="alert">
      <%= @error_message %>
    </div>
  <% end %>

  <div class="row">
  	 <% @tweets.each do |tweet| %>
  		<div class="col-md-6">
  			<div class="tech-news">
  				<a href="<%= tweet[:url] %>" target="_blank" rel="noopener noreferrer">
  					<div class="card">
  						<%= twitter_parser tweet[:text] %>
  					</div>
  				</a>
  			</div>
  		</div>
  	<% end %>

  	<% if @tweets.empty? && !@error_message %>
      <div class="col-md-12">
        <p class="text-muted">No tweets available at the moment.</p>
      </div>
    <% end %>
  </div>
</div>




