
<div class="col-md-4">
	<div class="card portfolio-box" data-id="<%= portfolio_item.id %>">
		<a href='<%= portfolio_show_path(portfolio_item) %>'>
   		<%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%', height: '100%' %>
   	</a>
    <p class="card-text">
    	<span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
    	<%= portfolio_item.subtitle %>
    </p>
    <% if logged_in?(:site_admin) %>
    	<div class="card-footer">
    		<%= link_to "Edit", edit_portfolio_path(portfolio_item), class: 'btn btn-sm btn-warning' %>
    		<%= link_to "Delete", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    	</div>
    <% end %>
  </div>
</div>


	
